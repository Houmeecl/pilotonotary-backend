{
  "name": "pilotonotary-backend",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
   "build": "esbuild server/index.ts --outfile=dist/index.js --platform=node --bundle --format=esm",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx scripts/seed.ts && tsx scripts/seed-documents.ts && tsx scripts/seed-sessions.ts"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "connect-pg-simple": "^10.0.0",
    "memorystore": "^1.6.7",
    "memoizee": "^0.4.17"
    "openid-client": "^6.5.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0",
    "ws": "^8.18.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.1",
    "esbuild": "^0.25.0",
    "typescript": "^5.6.3"
  }
}
